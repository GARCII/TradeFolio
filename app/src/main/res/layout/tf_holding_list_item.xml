<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/tf_margin_quarter">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/tf_margin"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_view_holding"
            android:layout_width="@dimen/tf_ic_big"
            android:layout_height="@dimen/tf_ic_big"
            android:layout_marginEnd="@dimen/tf_margin"
            android:contentDescription="@string/tf_ok" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view_holding_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:textSize="@dimen/tf_text_normal"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_view_holding_total"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#F0F0F0"
                android:textSize="@dimen/tf_text_normal" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_view_holding_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="end|center_vertical"
            android:textColor="@color/white"
            android:textSize="@dimen/tf_text_small"
            tools:text="34 $" />
    </LinearLayout>

    <View
        android:id="@+id/view_separator"
        style="@style/Separator.Horizontal"
        android:layout_marginTop="@dimen/tf_margin_quarter"
        android:background="#9E9E9E" />
</LinearLayout>